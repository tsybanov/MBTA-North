{
  "name": "mbta-north",
  "version": "1.0.0",
  "description": "A visual simulation of a real-life departure board at North Station, Boston, MA (MBTA)",
  "main": "index.js",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-transform-runtime"
    ]
  },
  "jest": {
    "automock": false,
    "setupFiles": [
      "./setupJest.js"
    ]
  },
  "scripts": {
    "build": "webpack --mode production",
    "dev": "webpack-dev-server --open",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tsybanov/MBTA-North.git"
  },
  "author": "Max Tsybanov",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tsybanov/MBTA-North.git/issues"
  },
  "homepage": "https://github.com/tsybanov/MBTA-North.git#readme",
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@babel/preset-react": "^7.10.4",
    "@babel/runtime": "^7.10.5",
    "babel-loader": "^8.3.0",
    "css-loader": "^6.7.3",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^26.1.0",
    "jest-fetch-mock": "^3.0.3",
    "style-loader": "^1.2.1",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  }
}
